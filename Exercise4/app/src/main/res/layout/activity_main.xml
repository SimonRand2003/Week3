<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:androidx="http://schemas.android.com/apk/res/androidx"
    xmlns:app1="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/trafficButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="STOP" />

        <ImageView
            android:id="@+id/redLight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/trafficButton"
            app1:srcCompat="@drawable/red_light"
            android:layout_marginTop="16dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/yellowLight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/trafficButton"
            app1:srcCompat="@drawable/yellow_light"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/greenLight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/trafficButton"
            app1:srcCompat="@drawable/green_light"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />

    </RelativeLayout>
</layout>
